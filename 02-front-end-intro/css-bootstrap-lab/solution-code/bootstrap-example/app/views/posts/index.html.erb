<p id="notice"><%= notice %></p>

<% @posts.each do |post| %>
  <div class="well">
    <h2><%= post.title %></h2>
    <h4>Written by <%= post.author %></h4> 
    <div>
      <%= truncate post.content, length: 700 %>
    </div>
    <%= link_to 'Show', post, class: "btn btn-success" %>
  </div>
<% end %>
